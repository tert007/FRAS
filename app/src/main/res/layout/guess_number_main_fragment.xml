<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:padding="@dimen/default_margin"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ProgressBar
        android:id="@+id/guess_number_main_progress_bar"
        android:layout_marginBottom="@dimen/default_margin"

        style="?android:attr/progressBarStyleHorizontal"

        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

        <TextView
            android:text="@string/record"
            android:textColor="@color/grey"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/guess_number_record"

            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"

            android:textColor="@color/grey"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

        <TextView
            android:text="@string/your_result"
            android:textColor="@color/grey"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/guess_number_current_result"

            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"

            android:textColor="@color/grey"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <TextView
        android:id="@+id/guess_number_points"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="20sp"
        android:textColor="@color/accept_green"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:id="@+id/guess_number_answer_layout"

        android:orientation="horizontal"

        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"

        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_gravity="center">
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"

        android:gravity="center"

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/guess_number_button1"

                android:theme="@style/GuessNumberButtonStyle"
                android:textColor="@color/white"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1"

                android:textSize="25sp"
                android:gravity="center" />

            <Button
                android:id="@+id/guess_number_button2"

                android:theme="@style/GuessNumberButtonStyle"
                android:textColor="@color/white"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2"

                android:textSize="25sp"
                android:gravity="center" />

            <Button
                android:id="@+id/guess_number_button3"

                android:theme="@style/GuessNumberButtonStyle"
                android:textColor="@color/white"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="3"

                android:textSize="25sp"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/guess_number_button4"

                android:theme="@style/GuessNumberButtonStyle"
                android:textColor="@color/white"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="4"

                android:textSize="25sp"
                android:gravity="center" />

            <Button
                android:id="@+id/guess_number_button5"

                android:theme="@style/GuessNumberButtonStyle"
                android:textColor="@color/white"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="5"

                android:textSize="25sp"
                android:gravity="center" />

            <Button
                android:id="@+id/guess_number_button6"

                android:theme="@style/GuessNumberButtonStyle"
                android:textColor="@color/white"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="6"

                android:textSize="25sp"
                android:gravity="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/guess_number_button7"

                android:theme="@style/GuessNumberButtonStyle"
                android:textColor="@color/white"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="7"

                android:textSize="25sp"
                android:gravity="center" />

            <Button
                android:id="@+id/guess_number_button8"

                android:theme="@style/GuessNumberButtonStyle"
                android:textColor="@color/white"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="8"

                android:textSize="25sp"
                android:gravity="center" />

            <Button
                android:id="@+id/guess_number_button9"

                android:theme="@style/GuessNumberButtonStyle"
                android:textColor="@color/white"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="9"

                android:textSize="25sp"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/guess_number_button0"

                android:theme="@style/GuessNumberButtonStyle"
                android:textColor="@color/white"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="0"

                android:textSize="25sp"
                android:gravity="center"/>

            <Button
                android:id="@+id/guess_number_button_edit"

                android:theme="@style/GuessNumberButtonStyle"
                android:textColor="@color/white"

                android:textAllCaps="false"

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="25sp"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>




</LinearLayout>
