<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ProgressBar
        android:id="@+id/guess_number_main_progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/guess_number_record"
        android:layout_gravity="right" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/guess_number_current_result"
        android:layout_gravity="right" />

    <TextView
        android:id="@+id/guess_number_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/guess_number_answer_layout"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_weight="1">
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="35dp"
        android:paddingRight="35dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1"

            android:textColor="@drawable/guess_number_button_text_color_selector"

            android:textSize="30sp"
            android:clickable="true"
            android:textStyle="bold"
            android:id="@+id/guess_number_button1"
            android:gravity="center" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2"

            android:textColor="@drawable/guess_number_button_text_color_selector"

            android:textSize="30sp"
            android:clickable="true"
            android:textStyle="bold"
            android:id="@+id/guess_number_button2"
            android:gravity="center" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="3"

            android:textColor="@drawable/guess_number_button_text_color_selector"

            android:textSize="30sp"
            android:clickable="true"
            android:textStyle="bold"
            android:id="@+id/guess_number_button3"
            android:gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="35dp"
        android:paddingRight="35dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="4"

            android:textColor="@drawable/guess_number_button_text_color_selector"

            android:textSize="30sp"
            android:clickable="true"
            android:textStyle="bold"
            android:id="@+id/guess_number_button4"
            android:gravity="center" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="5"

            android:textColor="@drawable/guess_number_button_text_color_selector"

            android:textSize="30sp"
            android:clickable="true"
            android:textStyle="bold"
            android:id="@+id/guess_number_button5"
            android:gravity="center" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="6"

            android:textColor="@drawable/guess_number_button_text_color_selector"

            android:textSize="30sp"
            android:clickable="true"
            android:textStyle="bold"
            android:id="@+id/guess_number_button6"
            android:gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="35dp"
        android:paddingRight="35dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="7"

            android:textColor="@drawable/guess_number_button_text_color_selector"

            android:textSize="30sp"
            android:clickable="true"
            android:textStyle="bold"
            android:id="@+id/guess_number_button7"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="8"

            android:textColor="@drawable/guess_number_button_text_color_selector"

            android:textSize="30sp"
            android:clickable="true"
            android:textStyle="bold"
            android:id="@+id/guess_number_button8"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="9"

            android:textColor="@drawable/guess_number_button_text_color_selector"

            android:textSize="30sp"
            android:clickable="true"
            android:textStyle="bold"
            android:id="@+id/guess_number_button9"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="35dp"
        android:paddingRight="35dp"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0"

            android:textColor="@drawable/guess_number_button_text_color_selector"

            android:textSize="30sp"
            android:clickable="true"
            android:textStyle="bold"
            android:id="@+id/guess_number_button0"
            android:gravity="center"/>
    </LinearLayout>


</LinearLayout>
