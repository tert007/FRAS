<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainMenu">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:visibility="gone"

                android:text="@string/reading"
                android:textSize="30sp"
                android:textColor="@drawable/menu_selector"

                android:padding="8dp"

                android:drawableLeft="@drawable/maim_menu_reading_button"
                android:drawableStart="@drawable/maim_menu_reading_button"

                android:gravity="center"
                android:layout_gravity="center_horizontal"

                android:layout_width="300dp"
                android:layout_height="wrap_content" />


            <TextView
                android:visibility="gone"
                android:text="@string/training"

                android:textSize="30sp"
                android:textColor="@drawable/menu_selector"

                android:padding="8dp"

                android:drawableLeft="@drawable/main_menu_training_item"
                android:drawableStart="@drawable/main_menu_training_item"

                android:gravity="center"
                android:layout_gravity="center_horizontal"

                android:layout_width="300dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/main_menu_start_reading_text_view"

                android:text="Чтение"

                android:textSize="30sp"
                android:textColor="@drawable/menu_selector"

                android:padding="8dp"

                android:drawableLeft="@drawable/i1"
                android:drawableStart="@drawable/i1"

                android:gravity="center"
                android:layout_gravity="center_horizontal"

                android:layout_width="300dp"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Пройти курс"

                android:textSize="30sp"
                android:textColor="@drawable/menu_selector"

                android:padding="8dp"

                android:drawableLeft="@drawable/i2"
                android:drawableStart="@drawable/i2"

                android:gravity="center"
                android:layout_gravity="center_horizontal"

                android:layout_width="300dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/main_menu_start_training_text_view"

                android:text="Тренировка"

                android:textSize="30sp"
                android:textColor="@drawable/menu_selector"

                android:padding="8dp"

                android:drawableLeft="@drawable/i3"
                android:drawableStart="@drawable/i3"

                android:gravity="center"
                android:layout_gravity="center_horizontal"

                android:layout_width="300dp"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Книги"

                android:textSize="30sp"
                android:textColor="@drawable/menu_selector"

                android:padding="8dp"

                android:drawableLeft="@drawable/i4"
                android:drawableStart="@drawable/i4"

                android:gravity="center"
                android:layout_gravity="center_horizontal"

                android:layout_width="300dp"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Мотиваторы"

                android:textSize="30sp"
                android:textColor="@drawable/menu_selector"

                android:padding="8dp"

                android:drawableLeft="@drawable/i5"
                android:drawableStart="@drawable/i5"

                android:gravity="center"
                android:layout_gravity="center_horizontal"

                android:layout_width="300dp"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Информация"

                android:textSize="30sp"
                android:textColor="@drawable/menu_selector"

                android:padding="8dp"

                android:drawableLeft="@drawable/i6"
                android:drawableStart="@drawable/i6"

                android:gravity="center"
                android:layout_gravity="center_horizontal"

                android:layout_width="300dp"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Статистика"

                android:textSize="30sp"
                android:textColor="@drawable/menu_selector"

                android:padding="8dp"

                android:drawableLeft="@drawable/i7"
                android:drawableStart="@drawable/i7"

                android:gravity="center"
                android:layout_gravity="center_horizontal"

                android:layout_width="300dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
