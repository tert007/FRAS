<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/reader_book_description_cover_image_view"
        android:layout_gravity="center"

        android:src="@drawable/book_without_title"

        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:scaleType="centerInside"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"/>


    <View
        android:background="@color/light_grey"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>


    <LinearLayout
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/reader_book_description_title_text_view"
            android:text="@string/book_title"
            android:textSize="16sp"
            android:textColor="@color/grey"
            android:layout_marginLeft="@dimen/default_margin"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/reader_book_description_title_result_text_view"
            android:textSize="16sp"
            android:textColor="@color/black"

            android:layout_marginLeft="@dimen/default_margin"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:background="@color/light_grey"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>


    <LinearLayout
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/reader_book_description_author_text_view"
            android:text="@string/author"
            android:textSize="16sp"
            android:textColor="@color/grey"
            android:layout_marginLeft="@dimen/default_margin"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/reader_book_description_author_result_text_view"
            android:textSize="16sp"
            android:textColor="@color/black"

            android:layout_marginLeft="@dimen/default_margin"
            android:layout_marginStart="@dimen/default_margin"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:background="@color/light_grey"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>


    <LinearLayout
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/reader_book_description_language_text_view"
            android:text="@string/language"
            android:textSize="16sp"
            android:textColor="@color/grey"

            android:layout_marginLeft="@dimen/default_margin"
            android:layout_marginStart="@dimen/default_margin"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/reader_book_description_language_result_text_view"
            android:textSize="16sp"
            android:textColor="@color/black"

            android:layout_marginLeft="@dimen/default_margin"
            android:layout_marginStart="@dimen/default_margin"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        android:background="@color/light_grey"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/reader_book_description_book_path_text_view"
            android:text="@string/file_path"
            android:textSize="16sp"
            android:textColor="@color/grey"

            android:layout_marginLeft="@dimen/default_margin"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/reader_book_description_book_path_result_text_view"
            android:textSize="16sp"
            android:textColor="@color/black"

            android:maxLines="2"
            android:ellipsize="marquee"

            android:layout_marginLeft="@dimen/default_margin"
            android:layout_marginStart="@dimen/default_margin"

            android:layout_marginRight="@dimen/default_margin"
            android:layout_marginEnd="@dimen/default_margin"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        android:background="@color/light_grey"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>


    <Button
        android:id="@+id/reader_book_description_pages_reading_button"

        android:text="@string/reading"

        android:background="@drawable/reader_book_description_button_background"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"

        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"/>

</LinearLayout>
