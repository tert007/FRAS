<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/reader_book_description_cover_image_view"
        android:layout_gravity="center"

        android:layout_width="wrap_content"
        android:layout_height="275dp"
        android:scaleType="centerInside"
        android:layout_marginTop="@dimen/default_margin" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/reader_book_description_title_text_view"
            android:text="@string/book_title"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/default_margin"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/reader_book_description_title_result_text_view"
            android:textSize="16sp"
            android:textColor="@color/black"

            android:layout_toRightOf="@id/reader_book_description_title_text_view"
            android:layout_toEndOf="@id/reader_book_description_title_text_view"

            android:layout_marginLeft="@dimen/default_margin"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/reader_book_description_author_text_view"
            android:text="@string/author"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/default_margin"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/reader_book_description_author_result_text_view"
            android:textSize="16sp"
            android:textColor="@color/black"

            android:layout_toRightOf="@id/reader_book_description_author_text_view"
            android:layout_toEndOf="@id/reader_book_description_author_text_view"

            android:layout_marginLeft="@dimen/default_margin"
            android:layout_marginStart="@dimen/default_margin"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/reader_book_description_language_text_view"
            android:text="@string/language"
            android:textSize="16sp"
            android:textColor="@color/black"

            android:layout_marginLeft="@dimen/default_margin"
            android:layout_marginStart="@dimen/default_margin"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/reader_book_description_language_result_text_view"
            android:textSize="16sp"
            android:textColor="@color/black"

            android:layout_toRightOf="@id/reader_book_description_language_text_view"
            android:layout_toEndOf="@id/reader_book_description_language_text_view"

            android:layout_marginLeft="@dimen/default_margin"
            android:layout_marginStart="@dimen/default_margin"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/reader_book_description_book_path_text_view"
            android:text="@string/file_path"
            android:textSize="16sp"
            android:textColor="@color/black"

            android:layout_marginLeft="@dimen/default_margin"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/reader_book_description_book_path_result_text_view"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_toRightOf="@id/reader_book_description_book_path_text_view"
            android:layout_toEndOf="@id/reader_book_description_book_path_text_view"

            android:maxLines="2"
            android:ellipsize="marquee"

            android:layout_marginLeft="@dimen/default_margin"
            android:layout_marginStart="@dimen/default_margin"

            android:layout_marginRight="@dimen/default_margin"
            android:layout_marginEnd="@dimen/default_margin"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <Button
        android:id="@+id/reader_book_description_pages_reading_button"

        android:text="Читать"

        android:layout_gravity="center_horizontal"

        android:layout_width="125dp"
        android:layout_height="wrap_content" />

</LinearLayout>
