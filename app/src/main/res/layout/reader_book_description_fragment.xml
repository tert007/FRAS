<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/reader_book_description_cover_image_view"
        android:layout_gravity="center"
        android:layout_width="250dp"
        android:layout_height="325dp"
        android:layout_marginTop="@dimen/default_margin" />

    <TextView
        android:id="@+id/reader_book_description_title_text_view"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/reader_book_description_author_text_view"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/reader_book_description_language_text_view"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/reader_book_description_book_path_text_view"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:text="Прокрутка"
        android:id="@+id/stard_read_button"
        android:layout_marginTop="@dimen/default_margin"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />

    <Button
        android:text="Страницы"
        android:id="@+id/stard_pages_read_button"
        android:layout_marginTop="@dimen/default_margin"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />
</LinearLayout>
