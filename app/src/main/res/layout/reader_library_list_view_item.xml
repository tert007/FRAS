<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"

    android:paddingTop="6dp"
    android:paddingBottom="6dp"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/reader_library_list_view_item_cover_text_view"

        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginStart="@dimen/default_margin"
        android:layout_marginRight="@dimen/default_margin"
        android:layout_marginEnd="@dimen/default_margin"

        android:textColor="@color/white"
        android:textSize="28sp"
        android:gravity="center"

        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        android:background="@drawable/reader_library_title_cover_shape_background"

        android:layout_width="72dp"
        android:layout_height="72dp" />

    <LinearLayout
        android:layout_toRightOf="@id/reader_library_list_view_item_cover_text_view"
        android:layout_toEndOf="@id/reader_library_list_view_item_cover_text_view"

        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/reader_library_list_view_item_title_text_view"

            android:layout_marginRight="@dimen/default_margin"
            android:layout_marginEnd="@dimen/default_margin"

            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"

            android:singleLine="true"
            android:ellipsize="end"

            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/reader_library__list_view_item_progress_text_view"
                android:text="@string/progress"

                android:textSize="16sp"
                android:textColor="@color/grey"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/reader_library__list_view_item_progress_result_text_view"

                android:textSize="16sp"
                android:textColor="@color/grey"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>