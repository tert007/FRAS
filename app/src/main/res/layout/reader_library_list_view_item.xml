<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"

    android:paddingLeft="@dimen/default_margin"
    android:paddingStart="@dimen/default_margin"
    android:paddingRight="@dimen/default_margin"
    android:paddingEnd="@dimen/default_margin"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/reader_library_list_view_item_image_view"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:layout_width="72dp"
        android:layout_height="100dp" />

    <ImageView
        android:id="@+id/reader_library_list_view_item_remove_image_view"

        android:src="@drawable/remove"

        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBaseline="@id/reader_library_list_view_item_image_view"

        android:padding="@dimen/default_margin"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/reader_library__list_view_item_progress_text_view"
        android:text="@string/bookOffset"

        android:textSize="12sp"
        android:textColor="@color/black"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginStart="@dimen/default_margin"

        android:layout_alignBottom="@id/reader_library_list_view_item_image_view"

        android:layout_toRightOf="@id/reader_library_list_view_item_image_view"
        android:layout_toEndOf="@id/reader_library_list_view_item_image_view" />

    <TextView
        android:id="@+id/reader_library__list_view_item_progress_result_text_view"

        android:textSize="12sp"
        android:textColor="@color/black"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginStart="@dimen/default_margin"

        android:layout_alignBottom="@id/reader_library__list_view_item_progress_text_view"

        android:layout_toRightOf="@id/reader_library__list_view_item_progress_text_view"
        android:layout_toEndOf="@id/reader_library__list_view_item_progress_text_view"  />


    <TextView
        android:id="@+id/reader_library_list_view_item_title_text_view"

        android:textSize="18sp"
        android:textColor="@color/black"

        android:maxLines="2"
        android:ellipsize="end"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginStart="@dimen/default_margin"

        android:layout_centerVertical="true"

        android:layout_toLeftOf="@id/reader_library_list_view_item_remove_image_view"
        android:layout_toStartOf="@id/reader_library_list_view_item_remove_image_view"

        android:layout_toRightOf="@id/reader_library_list_view_item_image_view"
        android:layout_toEndOf="@id/reader_library_list_view_item_image_view" />

</RelativeLayout>