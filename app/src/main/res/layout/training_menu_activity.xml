<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".trainingmenu.TrainingMenuActivity">

    <TextView
        android:id="@+id/training_menu_start_shulte"

        android:text="@string/shulte_table"
        android:textSize="22sp"
        android:textColor="@drawable/menu_selector"
        android:gravity="center"

        android:drawablePadding="8dp"
        android:drawableLeft="@drawable/training_menu_shulte_icon"
        android:drawableStart="@drawable/training_menu_shulte_icon"

        android:padding="8dp"

        android:layout_gravity="center_horizontal"
        android:layout_width="300dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/training_menu_start_guess_number"

        android:text="@string/guess_number"
        android:textSize="22sp"
        android:textColor="@drawable/menu_selector"
        android:gravity="center"

        android:drawablePadding="8dp"
        android:drawableLeft="@drawable/training_menu_guess_number_icon"
        android:drawableStart="@drawable/training_menu_guess_number_icon"

        android:padding="8dp"

        android:layout_gravity="center_horizontal"
        android:layout_width="300dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/training_menu_start_vision_field"

        android:text="@string/vision_field"
        android:textSize="22sp"
        android:textColor="@drawable/menu_selector"
        android:gravity="center"

        android:drawablePadding="8dp"
        android:drawableLeft="@drawable/training_menu_vision_field_icon"
        android:drawableStart="@drawable/training_menu_vision_field_icon"

        android:padding="8dp"

        android:layout_gravity="center_horizontal"
        android:layout_width="300dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/training_menu_start_speed_reading"

        android:text="Скорость чтения"
        android:textSize="22sp"
        android:textColor="@drawable/menu_selector"
        android:gravity="center"

        android:drawablePadding="8dp"
        android:drawableLeft="@drawable/training_icon_guess_number"
        android:drawableStart="@drawable/training_icon_guess_number"

        android:padding="8dp"

        android:layout_gravity="center_horizontal"
        android:layout_width="300dp"
        android:layout_height="wrap_content"/>

</LinearLayout>
