<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".speedreading.fragment.SpeedReadingAnswersFragment">

    <LinearLayout
        android:orientation="vertical"

        android:gravity="center_vertical"

        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:text="@string/speed"
            android:gravity="center_horizontal"

            android:textSize="35sp"
            android:textColor="@color/grey"

            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/speed_reading_answer_speed_text_view"

            android:gravity="center_horizontal"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textColor="@color/grey"
            android:textSize="90sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"

        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginRight="@dimen/default_margin"
        android:layout_marginStart="@dimen/default_margin"
        android:layout_marginEnd="@dimen/default_margin"

        android:gravity="center"

        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/speed_reading_answer_button_1"

                android:theme="@style/GuessNumberButtonStyle"
                android:textColor="@color/white"

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:gravity="center" />


            <Button
                android:id="@+id/speed_reading_answer_button_2"

                android:theme="@style/GuessNumberButtonStyle"
                android:textColor="@color/white"

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:gravity="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/speed_reading_answer_button_3"

                android:theme="@style/GuessNumberButtonStyle"
                android:textColor="@color/white"

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:gravity="center" />

            <Button
                android:id="@+id/speed_reading_answer_button_4"

                android:theme="@style/GuessNumberButtonStyle"
                android:textColor="@color/white"

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/speed_reading_answer_button_5"

                android:theme="@style/GuessNumberButtonStyle"
                android:textColor="@color/white"

                android:maxHeight="30dp"

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:gravity="center" />

            <Button
                android:id="@+id/speed_reading_answer_button_6"

                android:theme="@style/GuessNumberButtonStyle"
                android:textColor="@color/white"

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:gravity="center" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
