<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.preference.PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.preference.ListPreference
        android:title="@string/text_size"
        android:summary="@string/change_text_size"
        android:key="reader_text_size"
        android:defaultValue="@string/text_size_default_value"
        android:entries="@array/text_size_settings"
        android:entryValues="@array/text_size_settings" />

    <android.support.v7.preference.ListPreference
        android:title="@string/reader_flash_mode_complexity"
        android:summary="@string/reader_flash_mode_complexity_change_description"
        android:key="flash_mode_complexity"
        android:defaultValue="@string/reader_flash_mode_complexity_default_value"
        android:entries="@array/reader_flash_mode_complexity_show_values"
        android:entryValues="@array/reader_flash_mode_complexity_values" />

</android.support.v7.preference.PreferenceScreen>